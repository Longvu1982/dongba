{
  "name": "dongba-landing-page",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --names \"CLIENT,SERVER\" --prefix-colors \"cyan,green\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "concurrently --names \"CLIENT,SERVER\" --prefix-colors \"cyan,green\" \"npm run build:client\" \"npm run build:server\"",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "start": "concurrently --names \"CLIENT,SERVER\" --prefix-colors \"cyan,green\" \"npm run start:client\" \"npm run start:server\"",
    "start:client": "npm run start --workspace=client",
    "start:server": "npm run start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}